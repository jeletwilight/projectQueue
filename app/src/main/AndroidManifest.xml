<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jelelight.servicequeuing">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".PopWarningActivity"
            android:theme="@style/AppTheme.popMe"
            android:noHistory="true"></activity>

        <activity android:name=".ClinicInfoActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".EditProfileActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"/>

        <activity android:name=".ProfileActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".AllQueueActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".LobbyActivity"
            android:noHistory="false"
            android:screenOrientation="portrait"/>

        <activity android:name=".PinActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".ConfirmActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"/>

        <activity android:name=".SignUpActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".ListActivity"
        android:screenOrientation="portrait"/>

    </application>

</manifest>