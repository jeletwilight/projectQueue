<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMain"
    android:orientation="vertical"
    tools:context=".SelectCaseActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Space
            android:layout_weight="0.1"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <LinearLayout
            android:layout_weight="0.4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <ImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/Pills_ImgView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/pills" />

            <Button
                android:id="@+id/to_normal_btn"
                android:layout_marginTop="20dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/gray_round_button"
                android:backgroundTint="@color/colorButtonGreen"
                android:text="Normal Sickness"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="0.4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <ImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/Bandages_ImgView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/bandage" />

            <Button
                android:id="@+id/to_bandage_btn"
                android:layout_marginTop="20dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/gray_round_button"
                android:backgroundTint="@color/colorButtonRed"
                android:text="Bandage"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"
                />

        </LinearLayout>

        <Space
            android:layout_weight="0.1"
            android:layout_width="match_parent"
            android:layout_height="1dp" />


    </LinearLayout>


</LinearLayout>