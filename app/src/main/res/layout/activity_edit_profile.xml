<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMain"
    android:orientation="vertical"
    tools:context=".EditProfileActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@color/colorWhite"
        app:title="Edit Profile"
        android:background="@color/colorMainDark">

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="15dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/head_input_style"
                />

            <EditText
                android:id="@+id/name_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text_style"
                android:textSize="15dp"
                android:hint="Enter Your Name"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textSize="15dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/head_input_style"
                />

            <RadioGroup
                android:id="@+id/radio_gend"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text_style"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_gravity="center_vertical"
                    android:id="@+id/gender_m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Male" />

                <RadioButton
                    android:layout_gravity="center_vertical"
                    android:id="@+id/gender_f"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Female" />

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BirthDate"
                android:textSize="17dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/head_input_style"
                />


            <EditText
                android:background="@drawable/edit_text_style"
                android:id="@+id/birth_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:hint="Enter Birth Date"
                android:ems="10"
                android:inputType="date" />

            <Button
                android:id="@+id/select_date_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:text="Select"
                android:layout_marginStart="5dp"
                android:background="@drawable/dark_v_round_button"
                android:textColor="@color/colorWhite"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:textSize="17dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/head_input_style"
                />

            <EditText
                android:id="@+id/phone_edit"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text_style"
                android:inputType="number"
                android:hint="Enter Your Phone Number"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blood Type"
                android:textSize="15dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/head_input_style"
                />

            <RadioGroup
                android:id="@+id/radio_blood"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text_style"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_gravity="center_vertical"
                    android:id="@+id/blood_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="A" />

                <RadioButton
                    android:layout_gravity="center_vertical"
                    android:id="@+id/blood_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="B" />

                <RadioButton
                    android:layout_gravity="center_vertical"
                    android:id="@+id/blood_o"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="O" />

                <RadioButton
                    android:layout_gravity="center_vertical"
                    android:id="@+id/blood_ab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="AB" />

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height"
                android:textSize="17dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/head_input_style"
                />

            <EditText
                android:id="@+id/height_edit"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text_style"
                android:inputType="number"
                android:hint="Enter Your Height"/>

            <TextView
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cm."
                android:textSize="20dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight"
                android:textSize="17dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/head_input_style"
                />

            <EditText
                android:id="@+id/weight_edit"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text_style"
                android:inputType="number"
                android:hint="Enter Your Weight"/>

            <TextView
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kg."
                android:textSize="20dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Caution"
                android:textSize="17dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/head_input_style"
                />

            <EditText
                android:id="@+id/caution_edit"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text_style"
                android:hint="Allergic , Chornic disease"/>

        </LinearLayout>


        <Button
            android:id="@+id/editSubmit_Btn"
            style="@style/ButtonStyle"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/dark_v_round_button"
            android:text="Submit" />

        <Button
            android:id="@+id/backEdit_Btn"
            style="@style/ButtonStyle"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/gray_round_button"
            android:text="Back" />

    </LinearLayout>


</LinearLayout>