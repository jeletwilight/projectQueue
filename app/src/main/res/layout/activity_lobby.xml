<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMain"
    android:orientation="vertical"
    tools:context=".LobbyActivity">

    <TextView
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Queue Count"
        android:textStyle="bold"
        android:textSize="30dp"/>


    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        style="@style/ShowField">

        <TextView
            android:id="@+id/queueCount_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0"
            android:textSize="60dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status :"
            android:textSize="25dp"
            android:textAlignment="viewEnd"
            />

        <TextView
            android:id="@+id/clinicStat"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Closed"
            android:textColor="#d00"
            android:textSize="25dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|bottom"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/reserveBtn"
            android:layout_width="290dp"
            android:layout_height="59dp"
            android:layout_gravity="center"
            android:background="@drawable/gray_round_button"
            android:text="Reserve"
            android:textColor="@color/colorWhite"
            android:textSize="20dp" />

        <Button
            android:id="@+id/infoBtn"
            android:layout_width="290dp"
            android:layout_height="59dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/gray_round_button"
            android:backgroundTint="@color/colorButton"
            android:text="More Informattion"
            android:textColor="@color/colorWhite"
            android:textSize="20dp" />


    </LinearLayout>


</LinearLayout>