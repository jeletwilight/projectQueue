<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorMain"
    tools:context=".ConfirmActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@color/colorWhite"
        app:title="Confirmation"
        android:background="@color/colorMainDark">

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_weight="0.5"
        android:gravity="center_vertical|center_horizontal"
        android:background="@color/colorSub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:maxLines="1"
            android:layout_weight="12"
            android:textAlignment="viewEnd"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:text="Your Queue ID : "
            android:textSize="20dp" />

        <TextView
            android:maxLines="1"
            android:id="@+id/queueID"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="FAD82SA4K"
            android:textSize="20dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        android:gravity="center_horizontal|center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Remaining"
            android:textSize="40dp" />

        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            style="@style/ShowField">

            <TextView
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="60dp"
                android:text="999" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"
            android:text="Queues until your queue"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorMainDark"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/okBtn"
            android:layout_width="290dp"
            android:layout_height="59dp"
            android:layout_gravity="center"
            android:background="@drawable/gray_round_button"
            android:backgroundTint="@color/colorButtonGreen"
            android:text="OK"
            android:textColor="@color/colorWhite"
            android:textSize="20dp" />

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="290dp"
            android:layout_height="59dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/gray_round_button"
            android:backgroundTint="@color/colorButtonRed"
            android:text="Cancel Queue"
            android:textColor="@color/colorWhite"
            android:textSize="20dp" />

    </LinearLayout>



</LinearLayout>