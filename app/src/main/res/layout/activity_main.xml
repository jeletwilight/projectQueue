<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMain"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ProgressBar
            android:id="@+id/progressBarLogin"
            style="?android:attr/progressBarStyle"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="100dp"
            android:layout_height="100dp" />

    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="Service Queueing"
        android:textSize="35dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="@dimen/idField"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView

            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="13"
            android:background="@drawable/head_input_style"
            android:maxLines="1"
            android:paddingLeft="17.5dp"
            android:paddingRight="17.5dp"
            android:text="ID"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="20dp" />


        <EditText
            android:id="@+id/idText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:background="@drawable/edit_text_style"
            android:hint="Username"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:nextFocusRight="@id/pwText"
            android:nextFocusDown="@id/pwText"
            android:nextFocusForward="@id/pwText"
            android:singleLine="true"
            android:textSize="20dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/idField"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="13"
            android:background="@drawable/head_input_style"
            android:inputType="text"
            android:maxLines="1"
            android:text="PW"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/pwText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:background="@drawable/edit_text_style"
            android:hint="Password"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textSize="20dp" />


    </LinearLayout>

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/violet_round_button"
        android:text="LOGIN"
        android:textColor="@color/colorWhite"
        android:textSize="20dp" />

    <Button
        android:id="@+id/guestBtn"
        style="@style/ButtonStyle"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/gray_round_button"
        android:text="Login As GUEST" />


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:text="@string/registerText"
            android:textAlignment="center"
            android:textColorLink="@color/colorLightBlue"
            android:textSize="15dp" />

    </LinearLayout>


</LinearLayout>